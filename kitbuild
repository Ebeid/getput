NAME=python-gptools
VERSION=0.0.8
KITNAME=$NAME-$VERSION.src.tar.gz
DIRNAME=/tmp

mkdir -p $DIRNAME/$NAME-$VERSION
mkdir -p $DIRNAME/$NAME-$VERSION/docs
mkdir -p $DIRNAME/$NAME-$VERSION/man1

cp getput.py gpmulti.py          $DIRNAME/$NAME-$VERSION
cp gpsuite.py gpsuite.conf       $DIRNAME/$NAME-$VERSION
cp INSTALL UNINSTALL *txt        $DIRNAME/$NAME-$VERSION
cp RELEASE-$NAME                 $DIRNAME/$NAME-$VERSION
cp getting-started.txt           $DIRNAME/$NAME-$VERSION/docs
cp getput.1 gpmulti.1 gpsuite.1  $DIRNAME/$NAME-$VERSION/man1

rm -f $DIRNAME/$NAME-$VERSION/docs/*~

tar -C $DIRNAME -cpzf $DIRNAME/$KITNAME $NAME-$VERSION
rm -fr $DIRNAME/$NAME-$VERSION
echo "Built: $DIRNAME/$NAME-${VERSION}.src.tar.gz"
